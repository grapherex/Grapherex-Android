<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/conversation_list_item_background">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:button="@drawable/ic_calls_select_selector"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatarPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarPhoto"
        tools:checked="true"
        tools:visibility="visible" />

    <org.thoughtcrime.securesms.components.AvatarImageView
        android:id="@+id/ivAvatarPhoto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/conversation_list_settings_shortcut"
        app:layout_constraintStart_toEndOf="@+id/cbSelect"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_contact_picture" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPhoto"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarPhoto"
        tools:text="Peter Matthews" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="#B3B3B3"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ivCallsType"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="Today 15:40" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCallsType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:srcCompat="@drawable/ic_calls_outgoing_call" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:srcCompat="@drawable/ic_calls_phone_call" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent_black_05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarPhoto"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatarPhoto" />
</androidx.constraintlayout.widget.ConstraintLayout>